	<artifactId>aem-study</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<name>aem-study</name>
	
	<properties>
		<crx.host>localhost</crx.host>
		<crx.port>4502</crx.port>
		<crx.username>admin</crx.username>
		<crx.password>admin</crx.password>
	</properties>
	<repositories>
		<repository>
			<id>adobe</id>
			<name>Adobe Public Repository</name>
			<url>http://repo.adobe.com/nexus/content/groups/public/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>adobe</id>
			<name>Adobe Public Repository</name>
			<url>http://repo.adobe.com/nexus/content/groups/public/</url>
			<layout>default</layout>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<!-- Apache Felix SCR Plugin -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
				<version>1.17.0</version>
				<executions>
					<execution>
						<id>generate-scr-scrdescriptor</id>
						<goals>
							<goal>scr</goal>
						</goals>
						<configuration>
							<!-- Private service properties for all services. -->
							<properties>
								<service.vendor>Daehwan</service.vendor>
							</properties>
						</configuration>
					</execution>
				</executions>
				<configuration>
                   <outputDirectory>${project.build.directory}/classes</outputDirectory>
		        </configuration>
				<dependencies>
					<dependency>
						<groupId>org.slf4j</groupId>
						<artifactId>slf4j-simple</artifactId>
						<version>1.5.11</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.sling</groupId>
				<artifactId>maven-sling-plugin</artifactId>
				<version>2.0.6</version>
				<executions>
					<execution>
						<goals>
							<goal>install</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<slingUrl>http://${crx.host}:${crx.port}/crx/repository/crx.default</slingUrl>
					<usePut>true</usePut>
					<failOnError>true</failOnError>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.1.0</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<!--  -->
						<!-- 
							Created-By: Apache Maven Bundle Plugin 
							Private-Package: org.wso2.mbp.helloworld
							Bundle-ManifestVersion: 2 
							Bundle-SymbolicName: org.wso2.mbp.helloworld
							Bundle-Name: helloworld 
							Bundle-Version: 1.0.0 
							Bundle-Activator: org.wso2.mbp.helloworld.Activator 
							Import-Package: org.osgi.framework
						 -->
						<Created-By>Daehwan</Created-By>
						<Bundle-SymbolicName>com.daehwan.learning</Bundle-SymbolicName>
						<Bundle-Name>Daehwan learning</Bundle-Name>
						<Bundle-Version>${pom.version}</Bundle-Version>
						<Bundle-Category>adam</Bundle-Category>
						<Bundle-Activator>com.daehwan.learning.Activator</Bundle-Activator>
						<!-- <Bundle-ClassPath>.,/libs/jsso-agent.jar</Bundle-ClassPath>
						<Dynamic-Import>*</Dynamic-Import>
						<Include-Resource>lib=/libs</Include-Resource>
						<Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
						<Embed-Directory>OSGI-INF/lib</Embed-Directory>
						<Embed-Transitive>true</Embed-Transitive> --> 
						<Export-Package>
							com.daehwan.learning.felix.webconsole,
							com.daehwan.learning.workflow
						</Export-Package>
						<!-- <Private-Package>com.amorepacific.adam.core.impl.*</Private-Package> -->
						<Import-Package>
							!org.slf4j.impl,
							*
						</Import-Package>
                   </instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<!-- Development profile: install only the bundle -->
		<profile>
			<id>autoInstallBundle</id>
			<activation>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.sling</groupId>
						<artifactId>maven-sling-plugin</artifactId>
						<configuration>
							<!-- Note that this requires /apps/multiupload/install to exist!!          -->
							<!--    This is typically the case when ui.apps is deployed first                -->
							<!--    Otherwise, create /apps/multiupload/install manually (CRXDE|Lite)  -->
							<slingUrlSuffix>/apps/aem-study/install/</slingUrlSuffix>
							<failOnError>true</failOnError>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
